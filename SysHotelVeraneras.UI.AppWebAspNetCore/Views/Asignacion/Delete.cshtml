@model SysHotelVeraneras.EntidadesDeNegocio.Asignacion

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Asignacion</h1>

<h3>¿ Esta seguro que desea eliminar ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>

    @* FUNCTION ELIMINAR ROL*@
    @using (Html.BeginForm("Delete", "Asignacion", new { IdAsignacion = Model.IdAsignacion }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar?');" style="background-color: #CDDEA7; color: white; border-color:#CDDEA7;">
            <i class="fas fa-trash"></i> Eliminar
        </button>

        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index")'" style="background-color: #ADC484; color: white; border-color:#ADC484;">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <span class="text-danger">@ViewBag.Error</span>
    }

</div>